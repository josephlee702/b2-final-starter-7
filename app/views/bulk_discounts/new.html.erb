<%= render partial: "shared/nav" %>

<div class="row">
  <div class="col-sm-6 column-header">
    <p class='mr-auto'>Create a New Bulk Discount</p>
  </div>
</div>
<br>

<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts", method: :post, local: true do |f| %>
  <div class="line-up-text-fields">
    <%= f.label "Name:" %>
    <%= f.text_field :name %><br>
  </div>

  <div class="line-up-text-fields">
    <%= f.label "Percentage Discount:" %>
    <%= f.number_field :percentage_discount %><%= "%" %><br>
  </div>

  <div class="line-up-text-fields">
    <%= f.label "Quantity Threshhold:" %>
    <%= f.number_field :quantity_threshold %><br>
  </div>

  <%= f.submit "Submit" %>
<% end %>