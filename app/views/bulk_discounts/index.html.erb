<%= render partial: "shared/nav" %>

<div class="row">
  <div class="col-sm-6 column-header">
    <p class='mr-auto'>My Bulk Discounts</p>
  </div>
</div>
<div class="line-up-text-fields">
  <%= link_to "Create Bulk Discount", "/merchants/#{@merchant.id}/bulk_discounts/new" %>
</div>

<div class="mr-auto col-sm-6">
  <% @merchant.bulk_discounts.each do |discount| %>
    <h3><%= link_to "#{discount.name}", "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}" %></h3>
    <strong><u>Percentage Discount</u>: </strong><%= "#{discount.percentage_discount}%" %><br>
    <strong><u>Quantity Threshold</u>: </strong><%= "at least #{discount.quantity_threshold} of any item purchased" %>
    <%= button_to "Delete", "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :delete %>
  <% end %>
</div>